.b-loader
  overflow hidden
  -webkit-transform translate(0, 0)

  &__object
    background url('/public/images/loader.svg')
    background-size 100% 100%
    transform translateZ(0)
    animation spin 1s infinite linear
    width 100px
    height 100px
    display block

  &_f
    width 100px
    margin auto

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
