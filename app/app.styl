.b-page
  //font 13pt 'EB Garamond', 'serif'
  font 13pt 'Open Sans', sans-serif

a
  color #08c
  text-decoration underline


.b-body
  max-width 1600px
  margin 0 auto
  text-align center

  &__content
    text-align left


.b-header
  height 55px

  &_home
    position absolute
    top 20%
    margin: 0 auto
    text-align center
    width 99%



.b-nav
  display inline-block
  padding: 0 0 3pt 10pt
  vertical-align: bottom

  &_home
    font-size 2em
    padding 0

  &__item
    display inline-block
    margin 1pt 5pt 1pt 1pt

  &__link
    padding 0 4.5pt

    &_active
      text-decoration none
      border-bottom 0 none
      color #000

  &_header
    display inline-block
    padding 0 0 3pt 10pt
    vertical-align bottom



.b-logo
  display inline-block

  &_home
    display block

  &_page
    width 150px

  &__image
    width 100%

    &_home
      max-width 700px
      display block
      margin 0 auto

  &__slogan
    width 400px
    margin-top -35px




.b-list
  padding 0 15pt

  &__item__desrc
    padding 0 9pt

.b-footer
  text-align right
  font-size 11pt

  &_home
    position absolute
    bottom 5px
    color #000
    right 30px



@keyframes FadeOut
  0%
    opacity 1
  100%
    opacity 0

@keyframes FadeIn
  0%
    opacity 0
  100%
    opacity 1