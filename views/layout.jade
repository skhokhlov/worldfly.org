          a.b-header-nav-list-item_link.b-header-nav-list-item_link_active(href='/projects') Projects
        - else 
          a.b-header-nav-list-item_link(href='/projects') Projects
        - if(title == 'Principles')
          a.b-header-nav-list-item_link.b-header-nav-list-item_link_active(href='/principles') Principles
        - else 
          a.b-header-nav-list-item_link(href='/principles') Principles
        - if(title == 'Contacts')
          a.b-header-nav-list-item_link.b-header-nav-list-item_link_active(href='/contacts') Contacts
        - else 
          a.b-header-nav-list-item_link(href='/contacts') Contacts


    .b-content
